{
    "compilerOptions": {
        "esModuleInterop": true,
        "target": "ES6",
        "module": "ESNext",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "jsx": "react",
        "resolveJsonModule": true,
        "sourceMap": true,
        "noLib": false,
        "suppressImplicitAnyIndexErrors": true,
        "experimentalDecorators": true,
        "declaration": true,
        "composite": true,
        "declarationMap": true,
        "baseUrl": "src",
        "paths": {
            "*": ["types/*"]
        },
        "outDir": "./dist",
        "skipLibCheck": true
    },
    "compileOnSave": false,
    "exclude": ["node_modules", "test-configs", "src/**/tests/*", "**/*.test.ts", "**/node_modules"]
}
